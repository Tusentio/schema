{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Schema",
    "title": "@tusent.io/schema",
    "description": "A proprietary schema format for Tusentio projects",
    "definitions": {
        "Schema": {
            "anyOf": [
                {
                    "type": "object",
                    "required": ["type"],
                    "additionalProperties": true,
                    "properties": {
                        "type": { "const": "string" }
                    }
                },
                {
                    "type": "object",
                    "required": ["type"],
                    "additionalProperties": true,
                    "properties": {
                        "type": { "const": "number" },
                        "allowNaN": { "type": "boolean", "default": false }
                    }
                },
                {
                    "type": "object",
                    "required": ["type"],
                    "additionalProperties": true,
                    "properties": {
                        "type": { "const": "integer" },
                        "allowNaN": { "type": "boolean", "default": false }
                    }
                },
                {
                    "type": "object",
                    "required": ["type"],
                    "additionalProperties": true,
                    "properties": {
                        "type": { "const": "boolean" }
                    }
                },
                {
                    "type": "object",
                    "required": ["type"],
                    "additionalProperties": true,
                    "properties": {
                        "type": { "const": "any" }
                    }
                },
                {
                    "additionalProperties": {},
                    "properties": {
                        "type": {
                            "const": "const",
                            "type": "string"
                        },
                        "value": {}
                    },
                    "type": "object",
                    "required": ["type", "value"]
                },
                {
                    "type": "object",
                    "required": ["type"],
                    "additionalProperties": true,
                    "properties": {
                        "type": { "const": "object" },
                        "fields": {
                            "type": "object",
                            "additionalProperties": { "$ref": "#/definitions/Schema" },
                            "default": {}
                        }
                    }
                },
                {
                    "allOf": [
                        {
                            "type": "object",
                            "required": ["type", "item"],
                            "additionalProperties": true,
                            "properties": {
                                "type": { "const": "array" },
                                "item": { "$ref": "#/definitions/Schema" }
                            }
                        },
                        {
                            "oneOf": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "length": { "type": "integer", "minimum": 0 }
                                    }
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "maxLength": { "type": "integer", "minimum": 0 }
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "object",
                    "required": ["type", "items"],
                    "additionalProperties": true,
                    "properties": {
                        "type": { "const": "tuple" },
                        "items": {
                            "type": "array",
                            "items": { "$ref": "#/definitions/Schema" }
                        }
                    }
                }
            ]
        }
    }
}
